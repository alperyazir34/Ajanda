@model  KurumsalAjanda.Models.Is_Detay
@{
    /**/

    ViewBag.Title = "İş Yönetimi - Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">

            <form class="form-group" method="post" action="~/Is/Kaydet">
                @Html.AntiForgeryToken()
                <div style="background-color:#222d32; padding:20px; color:#fff;"><h2>İş - <b>Düzenle</b></h2></div>
                <div class="body-content">
                    <div class="row">
                        <div class="col-lg-6" style="padding:20px">
                            <b>Talep Edilen Kişi</b>
                            @Html.DropDownList("talepeden", ViewBag.talepeden as SelectList, "Seçiniz", new { @class = "form-control" })
                        </div>
                        <div class="col-lg-6" style="padding:20px">
                            <b>İş Durumu</b>
                            @Html.DropDownList("isdurumu", ViewBag.isdurumu as SelectList, "Seçiniz", new { @class = "form-control" })
                        </div>
                        <div class="col-lg-6" style="padding:20px">
                            <b>Talep Edilen Birim</b>
                            @Html.DropDownList("talepbirim", ViewBag.talepbirim as SelectList, "Seçiniz", new { @class = "form-control" })

                        </div>
                        <div class="col-lg-6" style="padding:20px">
                            <b>İş Türü</b>
                            @Html.DropDownList("isturu", ViewBag.isturu as SelectList, "Seçiniz", new { @class = "form-control" })

                        </div>
                        <div class="col-lg-6" style="padding:20px">
                            <b>Başlık</b>
                            @Html.TextBox("baslik",null, new { @class = "form-control",placeholder="Başlık Giriniz" })
                        </div>
                        <div class="col-lg-6" style="padding:20px">
                            <b>Açıklama</b>
                            @Html.TextBox("aciklama",null, new { @class = "form-control", placeholder = "Açıklama Giriniz" })
                        </div>
                        <div class="col-lg-6" style="padding:20px">
                            <b>Başlama Tarihi</b>
                            @Html.TextBox("baslamatarihi", null, new { @class = "form-control", type = "date" })
                        </div>
                        <div class="col-lg-6" style="padding:20px">
                            <b>Bitiş Tarihi</b>
                            @Html.TextBox("bitistarihi",null, new { @class = "form-control", type = "date" })
                        </div>
                        <div class="col-lg-6"><p style="color:green">@ViewBag.eklemebasarili</p></div>
                        <div class="col-lg-6">
                            @Html.HiddenFor(m=>m.Is_Detay_ID)
                            <input type="submit" name="gonder" value="Kaydet" class="btn btn-dark" style=" float:right;" />
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

